<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>

        <variable
            name="callBack"
            type="com.example.kamanakulkarni.mvvmdemo.callback.IProductClickListener"/>

        <variable
            name="productData"
            type="com.example.kamanakulkarni.mvvmdemo.model.network_call.ProductData"/>

    </data>

    <RelativeLayout
        android:onClick="@{() -> callBack.onProductClick(productData)}"
        android:layout_marginBottom="4dp"
        android:background="@android:color/white"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            app:imageUrl="@{productData.getImage()}"
            app:placeHolder="@{@drawable/event_placeholder}"
            tools:background="@tools:sample/backgrounds/scenic"
            android:id="@+id/ivProduct"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <TextView
            tools:text="Lamp"
            android:text="@{productData.name}"
            android:paddingLeft="8dp"
            android:textStyle="bold"
            android:fontFamily="casual"
            android:textColor="@android:color/black"
            android:id="@+id/tvProdDescription"
            android:gravity="center|left"
            android:layout_toRightOf="@+id/ivProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            tools:text="Rs. 80.00"
            android:paddingLeft="8dp"
            android:textStyle="bold"
            android:text="@{`Rs. `+productData.originalPrice}"
            android:fontFamily="casual"
            android:textColor="@android:color/holo_red_dark"
            android:id="@+id/tvActualMRP"
            android:minWidth="80dp"
            android:layout_toRightOf="@+id/ivProduct"
            android:layout_below="@+id/tvProdDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            tools:text="Rs 70.00"
            android:paddingLeft="12dp"
            android:textStyle="bold"
            android:text="@{`Rs. `+productData.sellingPrice}"
            android:fontFamily="casual"
            android:gravity="center|top"
            android:textColor="@android:color/black"
            android:id="@+id/tvSellingMRP"
            android:layout_toRightOf="@+id/tvActualMRP"
            android:layout_below="@+id/tvProdDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:background="@drawable/red_circle"
            tools:text="20% \nOFF"
            android:text="@{productData.discount + ` %\n OFF`}"
            android:textColor="@android:color/white"
            android:id="@+id/tvDiscount"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_below="@+id/tvSellingMRP"
            android:layout_toRightOf="@+id/ivProduct"
            android:layout_width="wrap_content"
            android:isIndicator="true"
            android:scaleY="0.5"
            tools:numStars="2"
            android:scaleX="0.5"
            android:clickable="false"
            android:paddingLeft="-8dp"
            android:visibility="@{productData.rating>0? View.VISIBLE:View.INVISIBLE}"
            android:progressTint="@color/zomato_red"
            android:rating="@{productData.rating}"
            android:layout_marginLeft="8dp"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ivProduct"
            android:layout_marginTop="2dp"
            android:background="@color/light_grey"
            />

    </RelativeLayout>

</layout>